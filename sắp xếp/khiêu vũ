import java.util.Scanner;
import java.util.Collections;
import java.util.ArrayList;
import java.util.Comparator;

public class bai1{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int m = sc.nextInt();
        ArrayList<Integer> nam = new ArrayList<>();
        ArrayList<Integer> nu = new ArrayList<>();
        for(int i = 0; i < n; i++) nam.add(sc.nextInt());
        for(int j = 0; j < m; j++) nu.add(sc.nextInt());
        Collections.sort(nam, new Comparator<Integer>(){

            @Override
            public int compare(Integer o1, Integer o2) {
                return o2 - o1;
            }
        });
        Collections.sort(nu, new Comparator<Integer>(){

            @Override
            public int compare(Integer o1, Integer o2) {
               return o2 - o1;
            }
        });
        int i = 0;
        int j = 0;
        int cnt = 0;
        while(i < n && j < m){
            if(nam.get(i) <= nu.get(j)){
                i++;
            }
            else{
                cnt++;
                i++;
                j++;
            }
        }
        System.out.println(cnt);
    }
}
