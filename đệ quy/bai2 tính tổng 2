import java.util.Scanner;
public class bai1 {
    public static int tong(int n){
        if(n == 1)
        return 1;
        else 
        return (int)Math.pow(n, 2) + tong(n - 1);
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        System.out.println(tong(n));
    }
}
